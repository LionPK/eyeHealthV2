<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startup.GuestUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingTop="16dp">

        <android.support.design.card.MaterialCardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_eyeDis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="48dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f06292"
                android:padding="16dp">

                <ImageView
                    style="@style/HomeItemImageStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eye_pic"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/info_title_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eye_guest_title1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="4dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#519657"
                android:padding="16dp">

                <ImageView
                    style="@style/HomeItemImageStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/food"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/info_title_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eye_guest_title2"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

            </LinearLayout>

        </android.support.design.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
